<project default="xar" name="${package(abbrev)}">
    <xmlproperty file="./expath-pkg.xml"/>
    <tstamp>
        <format property="DATETIME" pattern="yyyyMMdd-HHmm" locale="en,UK" />
    </tstamp>
    <property name="env.EXIST_PATH" value="/opt/exist/exist-distribution-5.2.0"/>
    <property name="project.version" value="${package(version)}"/>
    <property name="project.app" value="${package(abbrev)}"/>
    <property name="build.dir" value="./build"/>
    
    <target name="xar">
        <mkdir dir="${build.dir}"/>
        <zip basedir="." destfile="${build.dir}/${project.app}-${project.version}-${DSTAMP}-${TSTAMP}.xar" excludes="build/ buildPub/ build.xml homepage.xpr .existdb.json"/>
    </target>
    
</project>
